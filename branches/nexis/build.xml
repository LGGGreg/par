<project name="PAR-GTK" default="compile" basedir=".">
<target name="checkout">
  <exec executable="svn">
    <arg value="up"/>
  </exec>
</target>
<target name="compile">
  <exec executable="mdtool">
    <arg value="build" />
    <arg value="-f:PAR-GTK.sln" />
  </exec>
</target>
<target name="mkbin" depends="compile">
  <delete dir="Plugins" excludes="LSLObf.*,NeilSay.*,PubComb.*,Shadow.*,en" />
  <zip destfile="bin/PAR-GTK_Cruised.zip" basedir="Package" excludes="**/.svn/" />
  <scp 
	file="bin/PAR-GTK_Cruised.zip" 
	todir="root@192.168.9.5:/host/www.nexisonline.net/htdocs/PAR/packages/" />
</target>
</project>
